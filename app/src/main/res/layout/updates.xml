<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
android:id="@+id/cvinupdates"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:foreground="?android:attr/selectableItemBackground"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_src"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:src="@color/colorPrimaryDark"
            android:scaleType="fitXY"
            android:layout_margin="5dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="235dp"
            >
            <WebView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/web1">

            </WebView>
        </RelativeLayout>


        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:textColor="#000000"
            android:text="01/04/2018"
            android:layout_below="@id/img_src"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            />
        <ImageView
            android:id="@+id/img_like"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/likes"
            android:scaleType="fitXY"
            android:layout_below="@id/img_src"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="5dp"/>
        <TextView
            android:id="@+id/like_count"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_below="@id/img_src"
            android:layout_toEndOf="@id/img_like"
            android:layout_toRightOf="@id/img_like"
            android:text="25" />
        <ImageView
            android:id="@+id/share"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/share"
            android:layout_below="@id/img_src"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/share_cnt"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:text="share"
            android:layout_toEndOf="@id/share"
            android:layout_below="@id/img_src"
            android:layout_marginLeft="5dp"
            android:textColor="#000000"
            android:layout_toRightOf="@id/share" />
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/date"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:text="this is title"
            android:textSize="22sp"
            android:textColor="#000000"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/desc_updates"
            android:layout_below="@id/title"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:text="hello hwy how are you doing and whatd good  thurrasdy friday"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>
</LinearLayout>