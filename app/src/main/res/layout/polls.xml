<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp">
            <ImageView
                android:id="@+id/img_src_poll"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:src="@color/colorPrimaryDark"
                android:scaleType="fitXY"
                android:layout_margin="5dp"/>
            <TextView
                android:id="@+id/title_poll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_src_poll"
                android:layout_marginLeft="8dp"
                android:text="this is title"
                android:textSize="22sp"
                android:textColor="#000000"
                />
            <RadioGroup
                android:id="@+id/radio_options"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title_poll"
                android:layout_marginLeft="30dp">


                <RadioButton
                    android:id="@+id/radio_option1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="option1" />

                <RadioButton
                    android:id="@+id/radio_option2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="option2" />

            </RadioGroup>
            <TextView
                android:id="@+id/text_progress1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="45%"

                android:textSize="15sp"
                android:layout_marginLeft="50dp"
                android:layout_below="@id/radio_options"/>

            <ProgressBar
                android:id="@+id/poll_progress1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"


                android:layout_below="@+id/text_progress1"
                />
            <TextView
                android:id="@+id/text_progress2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="55%"

                android:textSize="15sp"
                android:layout_marginLeft="50dp"
                android:layout_below="@id/poll_progress1"/>
            <ProgressBar
                android:id="@+id/poll_progress2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"


                android:layout_below="@id/text_progress2"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>